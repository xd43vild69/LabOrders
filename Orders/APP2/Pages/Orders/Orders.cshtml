@page
@model MVC.Pages.Orders.IndexModel
@{
}
<main>
    <div class="form-row top-buffer">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-xs-6 form-group">
                <label for="ID">Nombre Orden :</label>
                <div class="control-group">
                    @*<select id="patient" class="demo-default" placeholder="Escriba Nombre Paciente"></select>*@
                    <select id="patient" class="form-group" placeholder="Escriba Nombre Paciente" style="width:30%">
                        <option value="1">Paciente1</option>
                        <option value="2">Paciente2</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-6 col-md-6 col-xs-6 form-group">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 form-group">
                <button type="button" class="btn btn-primary" id="btnSearch">Buscar Orden</button>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#OrderModal">
                    Agregar Orden
                </button>

            </div>
        </div>
        <div class="row top-buffer">
            <div id="jsGrid"></div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="OrderModal" tabindex="-1" role="dialog" aria-labelledby="OrderModal" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle"><b>Orden</b></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div id="OrderForm" class="container-fluid">
                            <div class="row">
                                <div class="col-sm-6 col-md-6 col-xs-6 form-group">
                                    <label for="OrderType">Tipo Orden :</label>
                                    <select id="OrderTypeID" class="form-control">
                                        <option value="1">MEDICAMENTO</option>
                                        <option value="2">CIRUGIA</option>
                                        <option value="3">TRATAMIENTO</option>
                                    </select>                                    
                                </div>
                                <div class="col-sm-6 col-md-6 col-xs-6 form-group">
                                    <label for="Priority">Prioridad :</label>
                                    <select id="OrderPriorityID" class="form-control">
                                        <option value="1">ALTA</option>
                                        <option value="2">MEDIA</option>
                                        <option value="3">BAJA</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 col-md-6 col-xs-6 form-group">
                                    <label for="State">Estado :</label>
                                    <select id="OrderStateID" class="form-control">
                                        <option value="1">ORDENADO</option>
                                        <option value="2">CANCELADO</option>
                                        <option value="3">SUMINISTRADO</option>
                                    </select>
                                </div>
                                <div class="col-sm-6 col-md-6 col-xs-6 form-group">
                                    <div id="divJustification">
                                        <label for="State">Razón :</label>
                                        <input class="form-control" type="text" id="Justification" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 form-group">
                                <div class="col-sm-12 col-md-12 col-xs-12 form-group">
                                    <label for="Posologia">Posología :</label>
                                    <textarea id="Posology" class="form-control form-control-lg" rows="3" type="text"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btnSave" class="btn btn-primary">Guardar Cambios</button>
                        <button type="button" id="btnUpdate" class="btn btn-primary">Actualizar Cambios</button>
                    </div>
                </div>
            </div>
        </div>


    </div>
</main>

